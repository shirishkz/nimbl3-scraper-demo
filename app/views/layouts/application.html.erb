<!DOCTYPE html>
<html>
<head>
  <title>Nimble Scraper</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <%= button_to 'Nimble Scraper', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if current_user %>
          <ul class="nav navbar-nav pull-right">
            <li><%= current_user.name %></li>
            &nbsp
            <li><%= button_to 'Log Out', logout_path, method: :delete %></li>
          </ul>
      <% else %>
          <ul class="nav navbar-nav">
            <li><%= button_to 'Twitter', '/auth/twitter' %></li>
            <li><%= button_to 'GitHub', '/auth/github' %></li>
          </ul>
      <% end %>
    </div>
  </div>
</nav>
<div class="container theme-showcase">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
  <%= yield %>
  <hr>
  <footer class="footer">
    <div class="container">
      <p class="text-muted">&copy; SK 2019</p>
    </div>
  </footer>
</div>
</body>
</html>
